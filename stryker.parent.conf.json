{
  "mutate": [
    "src/**/*.ts"
  ],
  "coverageAnalysis": "perTest",
  "checkers": [
    "typescript"
  ],
  "testRunner": "mocha",
  "reporters": [
    "progress",
    "html",
    "dashboard"
  ],
  "concurrency": 4,
  "plugins": [
    "../mocha-runner",
    "../typescript-checker"
  ],
  "dashboard": {},
  "buildCommand": "tsc -b",
  "files": [
    "{src,test,src-generated}/**/*.ts",
    "!{src,test,src-generated}/**/*.d.ts",
    "schema/**/*.json",
    "*",
    "typings/**/*.ts"
  ]
}
